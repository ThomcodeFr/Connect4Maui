<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="Connect4Maui.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:view="clr-namespace:Connect4Maui.Views"
    Shell.FlyoutBehavior="Flyout"
    Title="Connect4Maui">

    <ShellContent
        Title="Accueil"
        ContentTemplate="{DataTemplate view:MainPage}"
        Route="MainPage" />

    <ShellContent
        Title="Jeu"
        ContentTemplate="{DataTemplate view:GamePage}"
        Route="GamePage" />

</Shell>